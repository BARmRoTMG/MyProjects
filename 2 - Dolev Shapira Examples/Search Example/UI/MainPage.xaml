<Page
    x:Class="UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="295" Width="380.5">

    <Grid RenderTransformOrigin="0.76,0.503">
        <ListView x:Name="BooksListView" HorizontalAlignment="Left" BorderThickness="2" Height="136" Margin="102,83,0,0" VerticalAlignment="Top" Width="200" BorderBrush="Black">

        </ListView>
        <Button Content="Search" Margin="120,239,0,0" VerticalAlignment="Top" Click="Search_Click"/>
        <TextBox Name="SearchByTextBox" HorizontalAlignment="Left" Margin="82,36,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="36,43,0,0" Text="Filter" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <ComboBox x:Name="SearchByComboBox" Margin="251,35,0,0" Width="120" SelectionChanged="SearchBy">

        </ComboBox>
        <TextBlock HorizontalAlignment="Left" Margin="184,42,0,0" Text="Filter By" TextWrapping="Wrap" VerticalAlignment="Top"/>

    </Grid>
</Page>
