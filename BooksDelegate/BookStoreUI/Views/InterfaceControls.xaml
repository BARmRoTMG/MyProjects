<UserControl x:Class="BookStoreUI.InterfaceControls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BookStoreUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Book Title:" FontSize="15"></TextBlock>
            <TextBox x:Name="bookTitletb" Height="30"></TextBox>
            <TextBlock Text="Author:" FontSize="15"></TextBlock>
            <TextBox x:Name="authorTb" Height="30"></TextBox>
            <Button Content="Add Book" Height="25" FontSize="15" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</UserControl>
