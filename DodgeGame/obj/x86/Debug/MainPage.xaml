<Page x:ConnectionId='1' x:Name="_page"
    x:Class="DodgeGame.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DodgeGame"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Canvas x:ConnectionId='2' x:Name="canvas"></Canvas>
        <TextBlock x:ConnectionId='3'  x:Name="healthText" TextWrapping="Wrap" Text="0" FontSize="60"/>
        <CommandBar VerticalAlignment="Bottom" Height="40" Background="#C1100F0F" HorizontalAlignment="Right">
            <AppBarButton x:ConnectionId='4' x:Name="startNewButton" Content="START NEW GAME" FontSize="30" Width="120"                             ></AppBarButton>
            <AppBarButton x:ConnectionId='5' x:Name="saveGameButton" Content="SAVE GAME" FontSize="40" Width="120" Icon="Save"/>
            <AppBarButton x:ConnectionId='6' x:Name="loadGameButton" Content="LOAD GAME" FontSize="40" Width="120"/>

            <AppBarButton x:ConnectionId='7' x:Name="diffucultyButton" Content="DIFFICULTY" FontSize="40" Width="120">
                <AppBarButton.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem x:ConnectionId='10' Text="Easy"                             ></MenuFlyoutItem>
                        <MenuFlyoutItem x:ConnectionId='11' Text="Normal"                               ></MenuFlyoutItem>
                        <MenuFlyoutItem x:ConnectionId='12' Text="Hard"                               ></MenuFlyoutItem>
                    </MenuFlyout>
                </AppBarButton.Flyout>
            </AppBarButton>
            
            <AppBarButton x:ConnectionId='8'  x:Name="pauseButton" FontSize="100" Width="120"                          >
                <SymbolIcon x:ConnectionId='9' x:Name="pause_play" Symbol="Pause"/>
            </AppBarButton>
        </CommandBar>
    </Grid>
</Page>

