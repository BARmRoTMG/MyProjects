@model IEnumerable<IntervalQueue.Client.Models.CustomerDto>

<style>
    .queueView {
        align-content: center;
        text-align: center;
    }

    table, thead, th {
        width: 350px;
    }

    table, th, td {
        margin-top: 30%;
        margin-left: auto;
        margin-right: auto;
        border: 1px solid;
        text-align: center;
    }
</style>

<div class="queueView">
    <h1>Queue</h1>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.EntryTime)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.SerialNumber)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.EntryTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SerialNumber)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
