@model IntervalQueue.Client.Models.CustomerDto

<style>
    h1{
        text-align:center;
    }
    .entryView {
        margin-top: 115px;
    }

    .btn-primary {
        margin-top: 10px;
    }
</style>

<h1>Enqueue</h1>
<div class="entryView">
    <form asp-action="AddQueueEntry">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" name="name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div>
            <input type="submit" value="Enter Queue" class="btn btn-primary" />
        </div>
    </form>
</div>