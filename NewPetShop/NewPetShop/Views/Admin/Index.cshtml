@model IEnumerable<NewPetShop.Client.Models.AnimalDto>

@{
    ViewData["Title"] = ViewBag.Title;
}

<link rel="stylesheet" href="~/css/animals.css" />

<div class="view-container people-list-view">
    <h1>@ViewBag.Title</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="animals-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(m => m.AnimalId)
                </th>
                <th>
                    @Html.DisplayNameFor(m => m.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>
                        @Html.DisplayFor(modelItem => item.AnimalId)
                        </td>
                        <td>
                            <img src="@Html.DisplayFor(modelItem => item.Image.Url)" />
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Category.Name)
                        </td>
                        <td>
                        @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.AnimalId">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.AnimalId">Delete</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>