<Page Width="1000" Height="600"
    x:Class="SmokingChecker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmokingChecker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Smokers" FontSize="40" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Non-Smokers" FontSize="40" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Men" FontSize="40" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBlock Text="Women" FontSize="40" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        <TextBlock Text="Enter 1 for a man or 2 for a woman:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" Grid.Column="3" Grid.Row="1" Height="55" FontWeight="Bold"></TextBlock>
        <TextBox x:ConnectionId='2' x:Name="menWomen" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Grid.Column="3" Grid.Row="1" BorderThickness="3"></TextBox>

        <TextBlock Text="Enter 1 for a smoker or 2 for a non-smoker:" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12" Grid.Column="3" Grid.Row="2" FontWeight="Bold"></TextBlock>
        <TextBox x:ConnectionId='3' x:Name="smoking" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Grid.Column="3" Grid.Row="2" BorderThickness="3"></TextBox>

        <TextBlock x:ConnectionId='4' x:Name="menSmoker" Text="0" FontSize="50" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:ConnectionId='5' x:Name="womenSmoker" Text="0" FontSize="50" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:ConnectionId='6' x:Name="menNoSmoker" Text="0" FontSize="50" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock x:ConnectionId='7' x:Name="womenNoSmoker" Text="0" FontSize="50" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>

        <Button x:ConnectionId='8' Content="Insert" Grid.Column="3" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="100" FontSize="20" FontWeight="Bold"                     ></Button>
    </Grid>
</Page>

