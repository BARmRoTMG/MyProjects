<Application
    x:Class="DimitryCustomersTrio.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DimitryCustomersTrio">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="center" TargetType="FrameworkElement">
                <Setter Property="HorizontalAlignment" Value="Center"></Setter>
                <Setter Property="VerticalAlignment" Value="Center"></Setter>
            </Style>
            <Style TargetType="TextBlock" BasedOn="{StaticResource center}">
                <Setter Property="FontSize" Value="20"></Setter>
            </Style>
            <Style TargetType="Button" BasedOn="{StaticResource center}"></Style>
        </ResourceDictionary>
    </Application.Resources>

</Application>

